@model SGHR.Web.ViewModel.ServicioCategoria.AsignarPrecioServicioCategoriaViewModel

@{
    ViewData["Title"] = "Asignar Nuevo Precio";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="card">
    <div class="card-header">
        <h2><i class="bi bi-currency-dollar"></i> Asignar Nuevo Precio a @Model.NombreServicio</h2>
    </div>
    <div class="card-body">
        <form asp-action="AsignarPrecio" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdServicio" />

            <div class="mb-3">
                <label asp-for="IdCategoriaHabitacion" class="form-label"></label>
                <input asp-for="IdCategoriaHabitacion" class="form-control" type="number" />
                <span asp-validation-for="IdCategoriaHabitacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Asignar Precio
                </button>
                <a asp-action="DetallesServicio" asp-route-id="@Model.IdServicio" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}