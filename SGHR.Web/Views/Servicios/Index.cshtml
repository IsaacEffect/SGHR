@model IEnumerable<SGHR.Web.ViewModel.Servicios.ServiciosViewModel>
@using SGHR.Domain.Enums;
@{
    ViewData["Title"] = "Servicios";
}
<h1>Servicios</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo Servicio</a>
</p>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <ul>
            @foreach (var modelStateEntry in ViewData.ModelState.Values)
            {
                foreach (var error in modelStateEntry.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdServicio)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th class="text-center">Estado</th>
            <th class="text-center">Precios por Categoría</th> 
            <th class="text-center">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdServicio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td class="text-center">
                        @if (item.Activo)
                        {
                            <form asp-action="DesactivarServicio" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.IdServicio" />
                                <button type="submit" class="btn btn-sm btn-success" title="Clic para desactivar">
                                    <i class="bi bi-check-circle"></i> Activo
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="ActivarServicio" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.IdServicio" />
                                <button type="submit" class="btn btn-sm btn-secondary" title="Clic para activar">
                                    <i class="bi bi-x-circle"></i> Inactivo
                                </button>
                            </form>
                        }
                    </td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="GetPreciosPorServicio" asp-route-id="@item.IdServicio" class="btn btn-sm btn-info">
                                <i class="bi bi-tags"></i> Ver Precios
                            </a>
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.IdServicio" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@item.IdServicio"
                                    data-nombre="@item.Nombre">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No se encontraron Servicios.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal de Confirmación para Eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar el servicio <strong id="servicioNombre"></strong>?</p>
                <p class="text-muted">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" name="id" id="servicioId" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script para manejar el modal de eliminación
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteModal');
            const deleteForm = document.getElementById('deleteForm');
            const servicioNombre = document.getElementById('servicioNombre');
            const servicioIdInput = document.getElementById('servicioId');

            deleteModal.addEventListener('show.bs.modal', function(event) {
                // Botón que activó el modal
                const button = event.relatedTarget;

                // Extraer información de los atributos data-*
                const servicioId = button.getAttribute('data-id');
                const nombre = button.getAttribute('data-nombre');

                // Actualizar el contenido del modal
                servicioNombre.textContent = nombre;

                // Configurar la acción del formulario y el ID
                deleteForm.action = '@Url.Action("Delete", "Servicios")';
                servicioIdInput.value = servicioId;
            });
        });
    </script>
}