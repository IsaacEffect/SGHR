@model SGHR.Web.ViewModel.Reservas.ActualizarReservaViewModel;
@{
    ViewData["Title"] = "Editar Reserva";
}
<h1>Editar Reserva</h1>
<h4>Detalles de la Reserva</h4>
<hr />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdCategoriaHabitacion" class="control-label"></label>
                <input asp-for="IdCategoriaHabitacion" class="form-control" />
                <span asp-validation-for="IdCategoriaHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NumeroHuespedes" class="control-label"></label>
                <input asp-for="NumeroHuespedes" class="form-control" />
                <span asp-validation-for="NumeroHuespedes" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FechaEntrada" class="control-label"></label>
                <input type="date" asp-for="FechaEntrada"
                       min="@DateTime.Today.ToString("dd-MM-yyyy")"
                       class="form-control" />
                <span asp-validation-for="FechaEntrada" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FechaSalida" class="control-label"></label>
                <input type="date" asp-for="FechaSalida"
                       min="@DateTime.Today.ToString("dd-MM-yyyy")"
                       class="form-control" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<SGHR.Domain.Enums.EstadoReserva>()"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />

                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fechaEntrada = document.querySelector('#FechaEntrada');
            const fechaSalida = document.querySelector('#FechaSalida');

            const hoy = new Date().toISOString().split('T')[0];
            fechaEntrada.setAttribute('min', hoy);

            fechaEntrada.addEventListener('change', function () {
                const entradaValue = fechaEntrada.value;
                if (entradaValue) {
                    const fechaEntradaDate = new Date(entradaValue);
                    fechaEntradaDate.setDate(fechaEntradaDate.getDate() + 1);
                    const minFechaSalida = fechaEntradaDate.toISOString().split('T')[0];

                    fechaSalida.setAttribute('min', minFechaSalida);

                    if (fechaSalida.value && fechaSalida.value <= entradaValue) {
                        fechaSalida.value = '';
                    }
                }
            });

            const form = document.querySelector('form');
            form.addEventListener('submit', function (e) {
                const entrada = new Date(fechaEntrada.value);
                const salida = new Date(fechaSalida.value);
                const hoyDate = new Date(hoy);

                if (entrada < hoyDate) {
                    alert('La fecha de entrada no puede ser menor al día actual.');
                    e.preventDefault();
                    return;
                }

                if (entrada >= salida) {
                    alert('La fecha de salida debe ser mayor que la de entrada.');
                    e.preventDefault();
                    return;
                }
            });
        });
    </script>
}