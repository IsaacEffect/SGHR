@model SGHR.Web.Models.ClientesModel

@{
    ViewData["Title"] = "Mi Perfil";
}

<h2 class="mb-4">Mi Perfil</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre:</dt>
            <dd class="col-sm-9">@Model.nombre</dd>

            <dt class="col-sm-3">Apellido:</dt>
            <dd class="col-sm-9">@Model.apellido</dd>

            <dt class="col-sm-3">Correo electrónico:</dt>
            <dd class="col-sm-9">@Model.email</dd>

            <dt class="col-sm-3">Teléfono:</dt>
            <dd class="col-sm-9">@Model.telefono</dd>

            <dt class="col-sm-3">Dirección:</dt>
            <dd class="col-sm-9">@Model.direccion</dd>

            <dt class="col-sm-3">Fecha de Registro:</dt>
            <dd class="col-sm-9">@Model.fechaRegistro.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="ActualizarPerfil" class="btn btn-primary me-2">Editar Perfil</a>
            <a asp-action="EliminarCuenta" class="btn btn-danger me-2">Eliminar Cuenta</a>
            <a asp-action="CambiarContrasena" class="btn btn-warning text-white me-2">Cambiar Contraseña</a>
            <a asp-action="OpcionesCliente" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
